unit DAOPedidosGerais;

interface

uses
  System.Generics.Collections, Cliente.Model,  PedidoProduto.Model,
  DAOConexao,  Conexao.Controller, system.SysUtils,
  FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Error, FireDAC.UI.Intf, FireDAC.Phys.Intf, FireDAC.Stan.Def,
  FireDAC.Stan.Pool, FireDAC.Stan.Async, FireDAC.Phys, FireDAC.VCLUI.Wait,
  Data.DB, FireDAC.Comp.Client;

type
  TDAOPedidosGerais = Class
  private
    FItensPedido: TObjectList<TPedidoProdutos>;
   public
   constructor Create;
   destructor Destroy; Override;


  function CalcularTotalVenda(AItem :TPedidoProdutos):Double;
  function ListarPedidoGeral:TFDQuery;
  function IncluirItem(AItem :TPedidoProdutos):Boolean;
  function ExcluirItem(AItem :TPedidoProdutos):Boolean;
  function AlterarItem(AItem :TPedidoProdutos):Boolean;


End;

implementation

{ TDAOPedidosGerais }

function TDAOPedidosGerais.AlterarItem(AItem: TPedidoProdutos): Boolean;
Var
qyItem : TFDQuery;
begin
  try
   qyItem := TControllerConexao.getInstancia().daoConexao.getQuery;
   try
     qyItem.SQL.Text := '';
   finally
    qyItem.free;
   end;
   result := true;
  except
    result := false;
  end;

end;

function TDAOPedidosGerais.ListarPedidoGeral:TFDQuery;
Var
qyPedidoGeral: TFDQuery;
begin
  try
   qyPedidoGeral := TControllerConexao.getInstancia().daoConexao.getQuery;
    result := qyPedidoGeral;
   finally
    qyPedidoGeral.free;
   end;


end;

function TDAOPedidosGerais.CalcularTotalVenda(AItem: TPedidoProdutos): Double;
Var
qyItem : TFDQuery;
begin
  try
   qyItem := TControllerConexao.getInstancia().daoConexao.getQuery;
   try
     qyItem.SQL.Text := '';
   finally
    qyItem.free;
   end;
   result := 0;
  except
    result := 0;
  end;

end;

constructor TDAOPedidosGerais.Create;
begin

inherited Create;
end;

destructor TDAOPedidosGerais.Destroy;
begin

  inherited;
end;

function TDAOPedidosGerais.ExcluirItem(AItem: TPedidoProdutos): Boolean;
Var
qyItem : TFDQuery;
begin
  try
   qyItem := TControllerConexao.getInstancia().daoConexao.getQuery;
   try
     qyItem.SQL.Text := '';
   finally
    qyItem.free;
   end;
   result := true;
  except
   result := false;
  end;

end;

function TDAOPedidosGerais.IncluirItem(AItem: TPedidoProdutos): Boolean;
Var
qyItem : TFDQuery;
begin
  try
   qyItem := TControllerConexao.getInstancia().daoConexao.getQuery;
   try
     qyItem.SQL.Text := 'insert into pedidoprodutos (numeropedido_id, codigoproduto, quantidade, vlrunitario, vlrtotal) values(:npedido,:npro,:nqtde,:nvlrun, :nvlrtotal)';
     qyItem.ParamByName('npedido').AsInteger  := AItem.Numeropedido_id;
     qyItem.ParamByName('npro').AsInteger     := AItem.CodigoProduto;
     qyItem.ParamByName('nqtde').AsFloat      := AItem.Qtde;
     qyItem.ParamByName('nvlrun').AsFloat     := AItem.VlrUnitario;
     qyItem.ParamByName('nvlrtotal').AsFloat  := AItem.VlrTotal;
     qyItem.ExecSQL;
    finally
    qyItem.Transaction.CommitRetaining;
    qyItem.free;
   end;
   result := true;
  except
   qyItem.Transaction.Rollback;
    result := false;
  end;

end;

end.
